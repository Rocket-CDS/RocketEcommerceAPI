@inherits RocketEcommerceAPI.Components.RocketEcommerceAPITokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using Simplisity;
@using RocketEcommerceAPI.Components;
@using DNNrocketAPI.Components;
@using RocketPortal.Components

@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocketModules/RocketEcommerceAPI/App_LocalResources/")

@{
    var settingsData = (ShopSettingsLimpet)Model.List.First();
    var portalShop = (PortalShopLimpet)Model.GetDataObject("portalshop");
    var categoryDataList = (CategoryLimpetList)Model.GetDataObject("categorylist");
    var treelist = categoryDataList.GetCategoryTree();
}

<div id="categoryselect" class="w3-modal w3-animate-opacity">
    <div class="w3-modal-content" style="width:50%;">

        <header class="" style="height: 38.5px;">
            <span onclick="$('#categoryselect').hide();" class="w3-button w3-display-topright">&times;</span>
        </header>

        <div class="w3-row w3-padding">
            <input class="w3-col m12 w3-input w3-border w3-light-grey w3-padding" autocomplete="off" type="text" placeholder="@ResourceKey("DNNrocket.search")..." id="searchtext" onkeyup="searchFunction()">
        </div>

        <div class="w3-margin-top" style="">
            <div id="datalist" class="w3-container">

                @{
                    var lp1 = 0;
                }

                <ul id="categorylistdata" class="w3-ul  w3-hoverable " style="border-bottom: none;">

                    <li class="categorylist w3-row w3-border-top simplisity_click" s-cmd="categoryadmin_assigndefault" s-fields='{"categoryid":"0"}'>
                        <div class="w3-row" style="">
                            <div class="w3-col m12 ">
                                &nbsp;
                            </div>
                        </div>
                    </li>


                    @foreach (var catData in treelist)
                    {
                        lp1 += 1;

                        <li class="categorylist w3-row simplisity_click" s-cmd="categoryadmin_assigndefault" s-fields='{"categoryid":"@(catData.CategoryId)"}'>
                            <div class="w3-row" style="">
                                @{
                                    var prefix = "";
                                    for (int i = 0; i < catData.Level; i += 1)
                                    {
                                        prefix += "&nbsp;.";
                                    }
                                }
                                <div class="w3-col m12 ">
                                    <span class="">@HtmlOf(prefix)</span><b>@catData.Name</b>&nbsp;<span class="w3-tiny">@(ResourceKey("DNNrocket.ref").ToString()):&nbsp;@catData.Ref</span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $(':checkbox').attr('class', 'w3-check');
        $("#categorylistdata").disableSelection();
    });

    function searchFunction() {
        var input, filter, ul, li, a, i;
        input = document.getElementById("searchtext");
        filter = input.value.toUpperCase();
        ul = document.getElementById("datalist");
        li = ul.getElementsByTagName("li");
        for (i = 0; i < li.length; i++) {
            txtValue = li[i].textContent || li[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }


    function languageChange() {
        location.reload();
    }

</script>
